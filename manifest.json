{
  "manifest_version": 3,
  "name": "Spell Checker with Report",
  "version": "1.1",
  "description": "Highlight spelling mistakes and provide full report with suggestions.",
  "permissions": ["scripting", "activeTab", "downloads"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}